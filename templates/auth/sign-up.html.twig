{% extends "mazer/auth.html.twig" %}

{% block body %}
	<div class="row h-100">
		<div class="col-lg-5 col-12">
			<div id="auth-left">
				<div class="auth-logo">
					<a href="{{ path('home') }}">
						<img src="{{ asset('/images/logo/logo.png') | imagine_filter('inset_thumb') }}" alt="Logo"/>
						{# <img src="{{ asset('/images/logo/logo.png') }}" alt="Logo"/> #}
					</a>
				</div>
				<h1 class="auth-title">Sign Up</h1>
				<p class="auth-subtitle mb-5">Input your data to register to our website.</p>
				{{ form_start(form, {'attr': {'class': 'was-validated needs-validation'}}) }}
				<div class="form-group position-relative has-icon-left mb-4">
					{{form_widget(form.email)}}
					<div class="form-control-icon">
						<i class="bi bi-envelope"></i>
					</div>
				</div>
				<div class="form-group position-relative has-icon-left mb-4">
					{{form_widget(form.password.first)}}
					<div class="form-control-icon">
						<i class="bi bi-shield-lock"></i>
					</div>
				</div>
				<div class="form-group position-relative has-icon-left mb-4">
					{{form_widget(form.password.second)}}
					<div class="form-control-icon">
						<i class="bi bi-shield-lock"></i>
					</div>
				</div>

				<div class="form-group position-relative has-icon-left mb-4">
					{{form_widget(form.mobileNumber)}}
					<div class="form-control-icon">
						<i class="bi bi-shield-lock"></i>
					</div>
				</div>

				<div class="form-group position-relative has-icon-left mb-4">
					{{form_widget(form.address.address)}}
					<div class="form-control-icon">
						<i class="bi bi-shield-lock"></i>
					</div>
				</div>
				<div class="form-group position-relative has-icon-left mb-4">
					{{form_widget(form.address.detail)}}
					<div class="form-control-icon">
						<i class="bi bi-shield-lock"></i>
					</div>
				</div>
				<div class="form-group position-relative has-icon-left mb-4">
					{{form_widget(form.address.postCode)}}
					<div class="form-control-icon">
						<i class="bi bi-shield-lock"></i>
					</div>
				</div>

				<button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">Sign Up</button>
				{{ form_end(form) }}
				<div class="text-center mt-5 text-lg fs-4">
					<p class='text-gray-600'>Already have an account?
						<a href="{{path('login')}}" class="font-bold">Login</a>.
					</p>
				</div>
			</div>
		</div>
		<div class="col-lg-7 d-none d-lg-block">
			<div id="auth-right"></div>
		</div>
	</div>

	<script>
		const password = document.getElementById('user_password_first');
const confirmPassword = document.getElementById('user_password_second');
const valid = function (password, confirmPassword) {
if (confirmPassword.value == password.value) {
confirmPassword.setCustomValidity('');
} else {
confirmPassword.setCustomValidity("비밀번호가 다릅니다");
}
}
password.addEventListener("keyup", (event) => {
valid(password, confirmPassword)
});
confirmPassword.addEventListener("keyup", (event) => {
valid(password, confirmPassword)
});
	</script>
{% endblock %}
